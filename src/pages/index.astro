---
import Layout from "../layouts/Layout.astro";
import InstaLogo from "../components/InstaLogo.astro";
import Flagstx from "../components/Flagstx.astro";
---

<Layout title="Chip Stx">
  <main class="w-3/4 mx-auto p-8">
    <section id="hero" class="flex">
      <div class="container">
        <div id="main-logo" class="flex flex-col relative items-center mt-24">
          <div class="md:pr-8 pr-4"><Flagstx /></div>
          <div class="absolute inset-x-0 bottom-0 flex justify-center">
            <div>
              <h1
                class="text-white md:text-9xl text-6xl font-['SpriteGraffiti']"
              >
                Chip Stx
              </h1>
            </div>
          </div>
        </div>
        <div class="flex flex-col items-center gap-5">
          <div>
            <p
              class="text-white font-mono uppercase font-bold md:text-2xl text-sm"
            >
              custom alignment sticks
            </p>
          </div>
          <div class="rounded-full border-2 border-pink-400 m-auto px-6 py-2">
            <p class="text-white font-mono">2024</p>
          </div>
          <div id="social-footer" class="flex justify-center">
            <a href="https://www.instagram.com/chipstx_golf/"><InstaLogo /></a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

